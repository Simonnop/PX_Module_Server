# Django 安全性配置
# 复制此文件为 .env 并填入实际值

# Django Secret Key（生产环境必须修改）
# 生成方式: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=dev_secret_key_change_in_production

# 调试模式（生产环境设置为 False）
DEBUG=True

# 允许的主机列表（生产环境必须设置具体域名，用逗号分隔）
# 例如: ALLOWED_HOSTS=example.com,www.example.com
ALLOWED_HOSTS=*

# MongoDB 数据库配置
# MongoDB 连接字符串（包含用户名和密码）
MONGODB_HOST=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=ClusterName
# MongoDB 数据库名称
MONGODB_NAME=name

# 开发服务器端口
SERVER_PORT=8888

# 通知邮箱
NOTIFICATION_EMAIL=your-email@example.com
# 邮箱发送 api
EMAIL_API_URL=http://your-email-server:port/send